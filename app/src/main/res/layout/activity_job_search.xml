<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".JobSearchActivity">

    <com.google.android.material.navigation.NavigationView
            android:layout_width="0dp"
            android:layout_height="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <Button
                android:id="@+id/goBackFrmJob"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:backgroundTint="#FFFFFF"
                android:text="@string/back"
                app:icon="?attr/actionModeCloseDrawable"
                app:iconTint="#95000000"
                app:iconTintMode="src_in" />

    </com.google.android.material.navigation.NavigationView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.35000002"
            android:layout_marginTop="75dp">

        <!--    </LinearLayout>-->

<!--    <LinearLayout-->
<!--            android:orientation="vertical"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:padding="16dp">-->

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="223dp"
                android:background="@drawable/background_purple"
                android:id="@+id/linearLayout2">

            <androidx.cardview.widget.CardView
                    android:layout_width="335dp"
                    android:layout_height="45dp"
                    app:cardCornerRadius="8dp"
                    android:id="@+id/cardView2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.288"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="-5dp">

                <EditText
                        android:id="@+id/job_title_edittext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/job_title"
                        android:inputType="text"
                        android:autofillHints=""
                        android:minHeight="48dp"
                        android:textColorHint="#545355"
                        android:background="#FFFFFF"
                        android:paddingStart="16dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="333dp"
                    android:layout_height="47dp"
                    app:cardCornerRadius="8dp"
                    android:id="@+id/cardView3"
                    app:layout_constraintStart_toStartOf="@+id/cardView2"
                    android:layout_marginTop="18dp"
                    app:layout_constraintEnd_toEndOf="@+id/cardView2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.567"
                    android:layout_marginBottom="-10dp">

                <EditText
                        android:id="@+id/location_edittext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/location"
                        android:inputType="text"
                        android:autofillHints=""
                        android:minHeight="48dp"
                        android:textColorHint="#545355"
                        android:background="#FEFEFE"
                        android:paddingStart="16dp" />

            </androidx.cardview.widget.CardView>

            <Button
                    android:id="@+id/search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.927"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.987"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginEnd="-5dp" />

            <TextView
                    android:text="@string/find_jobs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView27"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.083"
                    android:layout_marginTop="-18dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

